<?xml version='1.0' encoding='UTF-8'?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="MailApp">
  <Id>6f7b10f8-cd17-4c7f-98a6-996de123445b</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>NINJIO</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Convert to Template"/>
  <Description DefaultValue="Send the NINJIO Lure platform an HTML template."/>
  <IconUrl DefaultValue="https://crepich.github.io/Ninjio-Outlook-Addin/lure-icon-32.png"/>
  <SupportUrl DefaultValue="https://ninjio.zendesk.com/hc/en-us/requests/new"/>
  <AppDomains>
    <AppDomain>https://e7f91d5c-56b0-46c1-a9cf-b6aa64394754-00-3bcv8n1sfv6rz.spock.replit.dev</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.5"/>
    </Sets>
  </Requirements>
  <Permissions>ReadItem</Permissions>
  <VersionOverrides xsi:type="VersionOverridesV1_0" xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0">
    <bt:Requirements>
      <bt:Set Name="Mailbox" MinVersion="1.5"/>
    </bt:Requirements>
    <Hosts>
      <Host Name="Mailbox">
        <ExtensionPoint xsi:type="MessageReadCommandSurface">
          <Group Label="NINJIO" id="msgReadGroup">
            <Control xsi:type="Button" id="msgReadOpenPaneButton">
              <Label>Convert to Template</Label>
              <Supertip Title="Convert to Template" Description="Send this message to NINJIO Lure as a template."/>
              <Icon size="16" bt:Image="https://crepich.github.io/Ninjio-Outlook-Addin/lure-icon-16.png"/>
              <Icon size="32" bt:Image="https://crepich.github.io/Ninjio-Outlook-Addin/lure-icon-32.png"/>
              <Icon size="80" bt:Image="https://crepich.github.io/Ninjio-Outlook-Addin/lure-icon-80.png"/>
              <Action xsi:type="ExecuteFunction" FunctionName="convertToTemplate"/>
            </Control>
          </Group>
        </ExtensionPoint>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://crepich.github.io/Ninjio-Outlook-Addin/lure-icon-16.png"/>
        <bt:Image id="icon32" DefaultValue="https://crepich.github.io/Ninjio-Outlook-Addin/lure-icon-32.png"/>
        <bt:Image id="icon80" DefaultValue="https://crepich.github.io/Ninjio-Outlook-Addin/lure-icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="functionFileUrl" DefaultValue="https://crepich.github.io/Ninjio-Outlook-Addin/functionFile.html"/>
      </bt:Urls>
    </Resources>
    <ExtensionPoint xsi:type="Events">
      <SourceLocation DefaultValue="https://crepich.github.io/Ninjio-Outlook-Addin/functionFile.html"/>
      <Function Name="convertToTemplate" FunctionFileUrl="functionFileUrl"/>
    </ExtensionPoint>
  </VersionOverrides>
</OfficeApp>
